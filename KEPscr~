##### If bright enough, move from acquisition to coronagraph and set appropriate settings
if ($4 < 110) then
#	subc 1024 NOTE KEPacq never changes subc
#	filt Kp Note should always be there after KEPacq

	corona 600 616
	if ($4 >= 86) then
		mov $2 $3 613 427
		sampmode 3 16 ; tint 20 ; coadd 1
	endif
	if (($4 >= 80) && ($4 < 86)) then
		mov $2 $3 628 442
		sampmode 3 16 ; tint 20 ; coadd 1
	endif
	if ($4 <  80) then
		mov $2 $3 613 427
#		mov $2 $3 628 442
		sampmode 3 16 ; tint 5 ; coadd 4
	endif
goi 3
endif

